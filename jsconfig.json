{
    "compilerOptions": {
		"module":  "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"DOM"
		],
		"checkJs": true,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": false,
		"noUnusedLocals": false, 
		"noUnusedParameters": false,
		"types": ["node", "dom"],
		"outDir": "dist"
    },
    "exclude": [
      "node_modules/**/*"
    ]
}