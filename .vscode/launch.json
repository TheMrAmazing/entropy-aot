{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug Entropy",
            "configurations": ["Database", "Server", "Client"]
        },
        {
            "name": "Debug Backend",
            "configurations": ["Database", "Server"]
        }
    ],
    "configurations": [
        {
            "name": "Client",
            "request": "launch",
            "preLaunchTask": "start-client",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/entropy-client"
        },
        {
            "name": "Database",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "type": "node",
            "env": {
                "TS_NODE_PROJECT": "tsconfig.json"
            },
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--loader",
                "ts-node/esm",
                "--experimental-specifier-resolution=node",
            ],
            "args":[
                "${workspaceFolder}/entropy-db/index"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Server",
            "program": "${workspaceFolder}/entropy-server/index.ts",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "type": "node",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--loader",
                "ts-node/esm",
                "--experimental-specifier-resolution=node",
                "-r",
                "tsconfig-paths/register"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}