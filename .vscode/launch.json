{
	"version": "0.2.0",
	"compounds": [
		{
			"name": "Debug Entropy",
			"configurations": ["Database", "Server", "Client"]
		},
		{
			"name": "Debug Backend",
			"configurations": ["Database", "Server"]
		}
	],
	"configurations": [
		{
			"name": "Tests",
			"program": "${workspaceFolder}/src/bootstrap.js",
			"args": ["--main", "${workspaceFolder}/src/testing/master.js"],
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
			"type": "node",
			"runtimeExecutable": "node",
			"killBehavior": "polite",
			"runtimeArgs": [
				"--inspect",
				"--enable-source-maps"
			],
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Client",
			"request": "launch",
			"type": "msedge",
			"runtimeArgs": ["--auto-open-devtools-for-tabs"],
			"url": "http://localhost:8080",
			"webRoot": "${workspaceFolder}/src"
		},
		{
			"name": "Database",
			"program": "${workspaceFolder}/src/bootstrap.js",
			"args": ["--main", "${workspaceFolder}/src/db.js"],
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
			"type": "node",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--inspect",
				"--enable-source-maps"
			],
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Server",
			"program": "${workspaceFolder}/src/bootstrap.js",
			"args": ["--main", "${workspaceFolder}/src/server.js"],
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			],
			"type": "node",
			"runtimeExecutable": "node",
			"runtimeArgs": [
				"--inspect",
				"--enable-source-maps"
			],
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}